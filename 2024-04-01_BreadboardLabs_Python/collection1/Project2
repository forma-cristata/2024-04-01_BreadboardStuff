from gpiozero import LED as LEDClass
from time import sleep

RED = LEDClass(17)
YELLOW = LEDClass(18)
GREEN = LEDClass(22)

def trafficLight():
    global RED, YELLOW, GREEN
    while True:
        RED.toggle()
        sleep(5)
        RED.toggle()
        GREEN.toggle()
        sleep(7)
        GREEN.toggle()
        YELLOW.toggle()
        sleep(2)
        YELLOW.toggle()




def destroy():
    global RED, YELLOW, GREEN
    RED.close()
    YELLOW.close()
    GREEN.close()
    
if __name__ == '__main__':
    print("Program is starting...")
    try:
        trafficLight()
    except KeyboardInterrupt:
        destroy()